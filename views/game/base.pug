extends ../base

block styles
    link(rel='stylesheet', href='/css/game/base.css')
    block game-styles

block content
    block game-content

    h3(id='time', class='d-block text-center') Time Left: 0

    div(id='mic', class='media-container')
        div(class='media-icon-holder')
            i(class='fas fa-microphone-slash')

    video(id='localVideo', class='d-none', autoplay, muted)
    video(id='remoteVideo', class='d-none', autoplay, muted)

    div(id='gameOverModal', class='modal fade', tabindex='-1')
        div(class='modal-dialog modal-dialog-centered')
            div(class='modal-content')
                div(class='modal-title')
                    h1(class='text-white text-center') Game Over
                div(class='modal-body')
                    button(id='home', class='action-button', data-dismiss='modal') Home

block scripts
    script(src='/socket.io/socket.io.js')
    script(src='/simple-peer/simplepeer.min.js')
    script(src='/js/game/base.js')
    block game-scripts